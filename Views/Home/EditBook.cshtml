@{
    ViewData["Title"] = "Edit Book";
}

@model BooksTracking.Models.Book

<div class="text-center">
    <h1 class="display-4">Edit Book</h1>
</div>

<form asp-action="EditBook" asp-controller="Home" method="post" enctype="multipart/form-data">
    <!-- Hidden field to retain the ID of the book being edited -->
    <input type="hidden" id="Id" name="Id" value="@Model.Id" />

    <div class="mb-3">
        <label for="Title" class="form-label">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" required maxlength="200">
    </div>
    <div class="mb-3">
        <label for="Author" class="form-label">Author</label>
        <input type="text" class="form-control" id="Author" name="Author" value="@Model.Author" required maxlength="100">
    </div>
    <div class="mb-3">
        <label for="Genre" class="form-label">Genre</label>
        <input type="text" class="form-control" id="Genre" name="Genre" value="@Model.Genre" maxlength="100">
    </div>
    <div class="mb-3">
        <label for="ISBN" class="form-label">ISBN</label>
        <input type="text" class="form-control" id="ISBN" name="ISBN" value="@Model.ISBN" maxlength="13">
    </div>
    <div class="mb-3">
        <label for="Description" class="form-label">Description</label>
        <textarea class="form-control" id="Description" name="Description" rows="5" maxlength="1000">@Model.Description</textarea>
    </div>
    <div class="mb-3">
        <label for="PublishedDate" class="form-label">Published Date</label>
        <input type="date" class="form-control" id="PublishedDate" name="PublishedDate" value="@Model.PublishedDate.ToString("yyyy-MM-dd")">
    </div>
    <div class="mb-3">
        <label for="CoverImage" class="form-label">Cover Image URL</label>
        <input type="text" class="form-control" id="CoverImage" name="CoverImage" value="@Model.CoverImage" placeholder="Enter image URL or upload a new image">

    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>

</form>

<a href="@Url.Action("Books", "Home")" class="btn btn-secondary mt-3">Back to Catalog</a>
