@model IEnumerable<BooksTracking.Areas.Identity.Data.ApplicationUser>

@{
    ViewData["Title"] = "Manage Users";
}

<h1 class="fancy-title">Users</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <a asp-controller="Home" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-controller="Home" asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                   
                </td>
            </tr>
        }
	</tbody> 
    @if (TempData["Error"] != null)
	{
		<div class="alert alert-danger">
			@TempData["Error"]
		</div>
	}

	@if (TempData["Success"] != null)
	{
		<div class="alert alert-success">
			@TempData["Success"]
		</div>
	}

</table>
